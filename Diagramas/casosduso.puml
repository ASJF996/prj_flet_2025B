@startuml

actor Jugador as Player

rectangle "Sistema de Videojuego (MVC)" {

    usecase "Mover Jugador" as UC_Mover
    usecase "Disparar" as UC_Disparar
    usecase "Cambiar Escenario" as UC_CambiarEscenario
    usecase "Actualizar Juego" as UC_Actualizar
    usecase "Detectar Colisiones" as UC_Colisiones
    usecase "Dibujar Escena" as UC_Dibujar
    usecase "Reiniciar Juego" as UC_Reiniciar
    usecase "Terminar Juego\n(Game Over)" as UC_GameOver

    ' Relaciones internas del sistema
    UC_Actualizar --> UC_Colisiones : <<include>>
    UC_Actualizar --> UC_Dibujar : <<include>>
    UC_Colisiones --> UC_GameOver : <<extend>>
}

' Relaciones del actor con el sistema
Player --> UC_Mover
Player --> UC_Disparar
Player --> UC_CambiarEscenario
Player --> UC_Reiniciar

@enduml
